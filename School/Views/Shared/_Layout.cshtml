<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/js/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/js/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/sb-admin-2.css" rel="stylesheet" />

    <!-- Custom Fonts -->
    <link href="~/js/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- #region Bootstrap-table (CSS)-->
    <link href="~/js/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/js/bootstrap-table/extensions/sticky-header/bootstrap-table-sticky-header.css" rel="stylesheet" />
    <link href="~/js/bootstrap-table/extensions/click-edit-row/bootstrap-table-click-edit-row.css" rel="stylesheet" />
    <link href="~/js/bootstrap-table/extensions/x-editable/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
    <!-- #endregion -->

    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/jquery/jquery.min.js"></script>
    <link href="~/js/bootstrap-table/extensions/x-editable/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />

    <script src="~/js/bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <div id="loading">
        <!--http://cssload.net/ru/spinners-->
        <!-- Dialog window start -->
        <div class="modal fade" id="dialogLoading" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="z-index: 2050;">
            <div class="modal-dialog" role="document">
                <div class="code-preview">
                    <div class="cssload-container" style="margin-top: 120px;">
                        <div class="cssload-whirlpool"></div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            var LoadingDialog = {
                Start: function () {
                    $('#dialogLoading').modal({ backdrop: 'static', keyboard: false });
                    $(".cssload-container").attr("style", "margin-top:" + $(window).height() / 2.5 + "px");
                },
                Stop: function () {
                    $('#dialogLoading').modal('hide');
                }
            };
        </script>

        <style>
        </style>
    </div>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Школа 1935</a>
            </div>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav in" id="side-menu">
                        <li>
                            <a asp-controller="Student" asp-action="Index"><i class="fa fa-child fa-fw"></i> Ученики</a>
                        </li>
                        <li>
                            <a asp-controller="Teacher" asp-action="Index"><i class="fa fa-user fa-fw"></i> Преподаватели</a>
                        </li>
                        <li>
                            <a asp-controller="Schedule" asp-action="Index"><i class="fa fa-table fa-fw"></i> Расписание</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i>Дополнительно<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse" aria-expanded="false" style="height: 0px;">
                                <li>
                                    <a asp-controller="Grades" asp-action="Index">Редактировать классы</a>
                                </li>
                                <li>
                                    <a asp-controller="Subjects" asp-action="Index">Редактировать предметы</a>
                                </li>
                            </ul>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper" style="min-height: 277px;">
            <!-- /.row -->
            <div class="row">

                @RenderBody()
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>

    @*@RenderBody()*@
    <div class="loading"></div>

    <link href="~/js/bootstrap-popper/tether/css/tether.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap-popper/tether/js/tether.min.js"></script>
    <script src="~/js/bootstrap-popper/js/tooltip.js"></script>

    <script src="~/js/site.js"></script>
    <script src="~/js/metisMenu/metisMenu.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    <script src="~/js/bootstrap-popper/js/tooltip.js"></script>
    <!-- #region Bootstrap-table (JS)-->
    <script src="~/js/bootstrap-table/bootstrap-table.js"></script>
    <script src="~/js/bootstrap-table/extensions/accent-neutralise/bootstrap-table-accent-neutralise.js"></script>
    <script src="~/js/bootstrap-table/extensions/x-editable/bootstrap3-editable/js/bootstrap-editable.js"></script>
    <script src="~/js/bootstrap-table/extensions/sticky-header/bootstrap-table-sticky-header.js"></script>
    <script src="~/js/bootstrap-table/extensions/contextmenu/bootstrap-table-contextmenu.min.js"></script>
    <script src="~/js/bootstrap-table/locale/bootstrap-table-ru-RU.js"></script>
    <script src="~/js/bootstrap-table/locale/bootstrap-table-eu-EU.js"></script>
    <!-- #endregion -->
    @RenderSection("Scripts", required: false)
</body>
</html>
